<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.iti.tastytrail.fragments.HomeFragment"
        android:label="Home" >
        <action android:id="@+id/action_home_to_detail" app:destination="@id/recipeDetailFragment" />
        <action android:id="@+id/action_home_to_favorite" app:destination="@id/favoriteFragment" />
        <action android:id="@+id/action_home_to_search" app:destination="@id/searchFragment" />
        <action android:id="@+id/action_home_to_about" app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.iti.tastytrail.fragments.RecipeDetailFragment"
        android:label="Recipe Detail" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.iti.tastytrail.fragments.FavoriteFragment"
        android:label="Favorites" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.iti.tastytrail.fragments.SearchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.iti.tastytrail.fragments.AboutFragment"
        android:label="About" />
</navigation>
