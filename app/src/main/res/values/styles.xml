<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Input Style for TextInputLayout -->
    <style name="Widget.RecipeApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.RecipeApp.SmallComponent</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
        <item name="hintTextColor">@color/colorOnSurface</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
    </style>

    <!-- Shape Appearance for rounded corners -->
    <style name="ShapeAppearance.RecipeApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Modern Input Style for TextInputEditText -->
    <style name="Widget.RecipeApp.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>